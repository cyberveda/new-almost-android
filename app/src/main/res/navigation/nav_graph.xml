<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_view"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.cyberveda.client.messagingmvvm.ui.login.LoginFragment"
        android:label="LoginFragment">
        <action
            android:id="@+id/action_loginFragment_to_signupFragment"
            app:destination="@id/signupFragment" />
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@+id/nav_view" />
    </fragment>
    <fragment
        android:id="@+id/signupFragment"
        android:name="com.cyberveda.client.messagingmvvm.ui.signup.SignupFragment"
        android:label="SignupFragment">
        <action
            android:id="@+id/action_signupFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@+id/nav_view" />
        <action
            android:id="@+id/action_signupFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"
            app:launchSingleTop="true" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.cyberveda.client.messagingmvvm.ui.home.HomeFragment"
        android:label="@string/home_fragment_label_nav_graph"
        tools:layout="@layout/home_fragment">
        <action
            android:id="@+id/action_homeFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@+id/nav_view" />
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_homeFragment_to_findUserFragment"
            app:destination="@id/findUserFragment" />
        <action
            android:id="@+id/action_homeFragment_to_incomingRequestsFragment"
            app:destination="@id/incomingRequestsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_contactsFragment"
            app:destination="@id/contactsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.cyberveda.client.messagingmvvm.ui.profile.ProfileFragment"
        android:label="@string/my_profile">
        <action
            android:id="@+id/action_profileFragment_to_findUserFragment"
            app:destination="@id/findUserFragment" />
        <action
            android:id="@+id/action_profileFragment_to_differentUserProfile"
            app:destination="@id/differentUserProfile" />
    </fragment>
    <fragment
        android:id="@+id/findUserFragment"
        android:name="com.cyberveda.client.messagingmvvm.ui.findUser.FindUserFragment"
        android:label="find_user_fragment"
        tools:layout="@layout/find_user_fragment">
        <action
            android:id="@+id/action_findUserFragment_to_differentUserProfile"
            app:destination="@id/differentUserProfile">

        </action>
    </fragment>
    <fragment
        android:id="@+id/differentUserProfile"
        android:name="com.cyberveda.client.messagingmvvm.ui.different_user_profile.DifferentUserProfileFragment"
        android:label="@string/different_user_profile_label_nav_graph" >
        <action
            android:id="@+id/action_differentUserProfile_to_chatFragment"
            app:destination="@id/chatFragment" />
    </fragment>
    <fragment
        android:id="@+id/incomingRequestsFragment"
        android:name="com.cyberveda.client.messagingmvvm.ui.incoming_requests.IncomingRequestsFragment"
        android:label="IncomingRequestsFragment" />
    <fragment
        android:id="@+id/contactsFragment"
        android:name="com.cyberveda.client.messagingmvvm.ui.contacts.ContactsFragment"
        android:label="@string/contacts_label_nav_graph">
        <action
            android:id="@+id/action_contactsFragment_to_findUserFragment"
            app:destination="@id/findUserFragment" />
        <action
            android:id="@+id/action_contactsFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
    </fragment>
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.cyberveda.client.messagingmvvm.ui.chat.ChatFragment"
        android:label="@string/chat_label_nav_graph" />
</navigation>